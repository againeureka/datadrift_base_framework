<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ config('app.name', 'Laravel') }}</title>
    <link href="{{ asset('css/app.css') }}" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script> <!-- FontAwesome Icons -->
    <style>
        .sidebar {
            width: 200px;
            background-color: #2c3e50;
            color: white;
            height: 100vh;
            position: fixed;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

        .sidebar ul li {
            padding: 15px;
            cursor: pointer;
        }

        .sidebar ul li:hover {
            background-color: #34495e;
        }

        .content {
            margin-left: 200px;
            padding: 20px;
        }

        .active-link {
            background-color: #1abc9c;
        }
    </style>
</head>
<body>

    <!-- Sidebars -->
    <div class="sidebar" id="dashboard-sidebar">
        <ul>
            <li data-link="overview"> <i class="fas fa-home"></i> Overview</li>
            <li data-link="stats"> <i class="fas fa-chart-bar"></i> Statistics</li>
            <li data-link="reports"> <i class="fas fa-file-alt"></i> Reports</li>
        </ul>
    </div>

    <!-- Content Area -->
    <div class="content" id="content">
        <h2>Welcome to Dashboard</h2>
        <p>Click a link on the sidebar to load content dynamically.</p>
    </div>

    <script>
        document.querySelectorAll('.sidebar ul li').forEach(item => {
            item.addEventListener('click', function() {
                const link = this.getAttribute('data-link');
                document.getElementById('content').innerHTML = `<h2>${link} Content</h2><p>Loading ${link} details...</p>`;

                // 사이드바의 활성화된 링크 스타일링
                document.querySelectorAll('.sidebar ul li').forEach(li => li.classList.remove('active-link'));
                this.classList.add('active-link');
            });
        });
    </script>

</body>
</html>